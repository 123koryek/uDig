<?xml version="1.0" encoding="UTF-8"?>
<project name="customBuildCallbacks">
	<target name="pre.gather.sources" >
		<fileset dir="${basedir}/../net.refractions.udig.libs/lib/sources" id="jar.sources">
		   <include name="*-sources.jar" />
		</fileset>
		<property name="libs_src_dir" value="${basedir}/src/net.refractions.udig.libs_1.3.1.qualifier/lib"/>
		<echo>Copying source jars into ${libs_src_dir} ...</echo>
		<copy todir="${libs_src_dir}" verbose="true">
            <fileset refid="jar.sources" />
            <chainedmapper>
                <mapper type="flatten" />
                <mapper type="glob" from="*-sources.jar" to="*src.zip" />
            </chainedmapper>
        </copy>
	</target>
	
	<target name="clean" description="Remove lib folder holding source zip files">
		<echo>Cleaning ${basedir}/lib</echo>
		<delete dir="${basedir}/lib" />
		<delete dir="${basedir}/lib" />
	</target>
</project>
